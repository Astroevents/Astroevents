
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-8">
      <div class="image-wrapper">
        <img src="/<%= event.imageUrl%>" alt="">
      </div>
      <div class="assistans-wrapper">

        <button id="voting" <% if(assisted) { %> disabled <% } %> class="btn">Asistir</button>
          <p>Al evento asistir√°n <strong style="font-size:25px" id="assistans-count"><%=assistants.length%></strong> personas!</p>
        <hr>
        <% assistants.forEach((assistant) => { %>
        <img class="assistant-img" id="imagen" src="/<%=assistant.userID.imgUrl%>"></img>
      <% }) %>

      </div>
    </div>
    <div class="col-xs-4 comments-wrapper">

      <form action="/comments/<%= event._id %>" method="POST">
        <textarea type="text" name="comment" class="form-control form-control input-sm chat-input" id="comment" placeholder="Write your message here..."></textarea>

        </br>
        <button class="btn " type="submit">Create Comment</button>
        </br>
        </form>
        <ul data-brackets-id="12674" id="sortable" class="list-unstyled ui-sortable">
        <small class="pull-right text-muted">
           <span class="glyphicon glyphicon-time"></span></small>
        </br>
        <hr>
        <% comments.forEach((event) => { %>
          <div class="comment-item row">
            <div class="col-xs-3 image-profile-wrapper">
              <img src="/<%=event.userOwner.imgUrl%>" alt="">
            </div>
            <div class="col-xs-9">
              <span class="user-name-comment"><%=event.userOwner.username%></span>
              <span class="created-at-comment"><%=event.created_at%></span>
            </div>
            <div class="col-xs-3">
            </div>
            <div class="col-xs-9 comment-wrapper">
              <p class="comment-text"><%=event.comment%></span>
            </div>
          </div>
          <hr>
          <%  }); %>

    </ul>
    </div>
  </div>
</div>

<script type="text/javascript">
  var currentUser = <%-JSON.stringify({
    user : user,
    event: event
  })
  %>
</script>
