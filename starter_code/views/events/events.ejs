            <div class="well well-sm">
                <div class="row">
                  <div class="col-sm-6 col-md-4">
                    <% if (user) { %>
                    <img src="/<%= user.imgUrl%>" alt="" class="img-circle img-responsive" />
                  </div>
                  <div class="col-sm-6 col-md-8">
                    <h4><i class="glyphicon glyphicon-user"></i> <strong><%= user.name %> <%= user.lastName %></strong></h4>
